<% include ../partials/header%>
<h1 style="text-align:center; margin-bottom: 40px">Add a New Comment</h1>

<form style="margin:auto; width:30%" action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
    <div class ="form-group">
    <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
    </div>
    <div class ="form-group">
    <button class="btn btn-success btn-lg btn-block">Add Comments</button>
    </div>
    <p><a href="/campgrounds/<%=campground._id%>">Go Back</a></p>
</form>
<% include ../partials/footer%> 