<% include ../partials/header%>
<h1 style="text-align:center; margin-bottom: 40px">Add a New Campground to the Directory</h1>

<form style="margin:auto; width:30%" action="/campgrounds" method="post">
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="Campground Name" name="name">
    </div>
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="image url" name="image">
    </div>    
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="description" name="description">
    </div>
    <div class ="form-group">
    <button class="btn btn-primary btn-lg btn-block">Add Campground</button>
    </div>
    <p><a href="/campgrounds">Go Back</a></p>
</form>
<% include ../partials/footer%>                