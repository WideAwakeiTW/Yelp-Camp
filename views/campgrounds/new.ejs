<% include ../partials/header%>
<h1 style="text-align:center; margin-bottom: 40px">Add a New Campground to the Directory</h1>

<form style="margin:auto; width:30%" action="/campgrounds" method="post">
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="Campground Name" name="name">
    </div>    
    <div class ="form-group">
    <select class= "form-control" name="price" >
        <option id="firstselect" selected="unkown" value="price per night is unkown">select general price range</option>
        <option>Free!</option>
        <option value="under $15/nt">under $15/nt</option>
        <option>$15-$30/nt</option>
        <option>$30-$45/nt</option>
        <option>$45-$60/nt</option>
        <option>over $60/nt</option>
    </select>
    </div>
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="image url" name="image">
    </div>    
    <div class ="form-group">
    <input class="form-control" type="text" placeholder="description" name="description">
    </div>
    <div class ="form-group">
    <button class="btn btn-primary btn-lg btn-block">Add Campground</button>
    </div>
    <p><a href="/campgrounds">Go Back</a></p>
</form>
<% include ../partials/footer%>                